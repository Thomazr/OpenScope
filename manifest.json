{
  "manifest_version": 2,

  "name": "OpenScope",
  "description": "A #ZEISShack project",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "content_scripts": [
    {
        "js": ["jquery-3.2.1.min.js", "content_script.js"],
        "css": ["content_stylesheet.css"],
        "matches": ["https://zenbrowser.zeiss.com/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://zenbrowser.zeiss.com/*"
  ],
  "web_accessible_resources": ["openscope-logo.png"]
}